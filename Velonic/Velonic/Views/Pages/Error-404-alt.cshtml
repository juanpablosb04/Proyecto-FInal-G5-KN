@{
    ViewBag.Title = "Error 404 Alt";
    ViewBag.subTitle = "Pages";
    Layout = null;
}


@Html.Partial("~/Views/Shared/html.cshtml")

<head>
    @Html.Partial("~/Views/Shared/title-meta.cshtml")

    @Html.Partial("~/Views/Shared/head-css.cshtml")
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">

        @Html.Partial("~/Views/Shared/menu.cshtml")

        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    @Html.Partial("~/Views/Shared/page-title.cshtml")

                    <div class="row justify-content-center items">
                        <div class="col-12">
                            <div class="d-flex flex-column h-100">
                                <div class="row justify-content-center">
                                    <div class="col-lg-4">
                                        <div class="text-center">
                                            <h1 class="text-error mb-4">404</h1>
                                            <h2 class="text-uppercase text-danger mt-3">Page Not Found</h2>
                                            <p class="text-muted mt-3">
                                                It's looking like you may have taken a wrong turn. Don't worry... it
                                                happens to the best of us. Here's a
                                                little tip that might help you get back on track.
                                            </p>

                                            <a class="btn btn-soft-danger mt-3" href="@Url.Action("Index", "Dashboard")"><i class="ri-home-4-line me-1"></i> Back to Home</a>
                                        </div> <!-- end /.text-center-->
                                    </div> <!-- end col-->
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div>

                </div> <!-- container -->

            </div> <!-- content -->
            @Html.Partial("~/Views/Shared/footer.cshtml")

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->
    @Html.Partial("~/Views/Shared/right-sidebar.cshtml")


    @Html.Partial("~/Views/Shared/footer-scripts.cshtml")

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>

</body>
</html>
