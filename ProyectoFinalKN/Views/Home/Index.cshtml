﻿@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center"
     style="background: url('/Images/fondoMain.jpeg') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            height: 100vh;
            width: 100%;">
    <div class="auth-box">
        <div id="loginform">
            <div class="logo">
                <span class="db">
                    <img src="~/Images/logoTallerPicado.ico" />
                </span>
                <h5 class="font-medium m-b-20">Inicia como administrador</h5>
            </div>

            <div class="row">
                <div class="col-12">
                    <form class="form-horizontal m-t-20" id="loginform" action="index.html">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            <input type="text" class="form-control form-control-lg" placeholder="Usuario" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                            </div>
                            <input type="text" class="form-control form-control-lg" placeholder="Contraseña" aria-label="Password" aria-describedby="basic-addon1">
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Recuerdame</label>
                                    <a href="javascript:void(0)" id="to-recover" class="text-dark float-right"><i class="fa fa-lock m-r-5"></i> ¿Olvidaste la contraseña?</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg" style="background-color: #004e38; color: white; " type="submit">Log In</button>

                            </div>
                        </div>
                        
                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                ¿No tienes cuenta?<a href="authentication-register1.html" class="text-info m-l-5"><b>Registrate</b></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="recoverform">
            <div class="logo">
                <span class="db"><img src="" alt="logo" /></span>
                <h5 class="font-medium m-b-20">Recupera la contraseña</h5>
                <span>¡Ingresa tu Email y te enviaremos instrucciones!</span>
            </div>
            <div class="row m-t-20">

                <form class="col-12" action="index.html">

                    <div class="form-group row">
                        <div class="col-12">
                            <input class="form-control form-control-lg" type="email" required="" placeholder="Correo electronico">
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-12">
                            <button class="btn btn-block btn-lg" style="background-color: #004e38; color: white;" type="submit" name="action">Reset</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>